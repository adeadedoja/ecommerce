<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :unit_price %>
    <%= f.collection_select(:manufacturer_id,Manufacturer.all,:id,:name, {prompt: 'Select Manufacturer'}) %>
    <%= f.collection_select(:category_id,Category.all,:id,:name, {prompt: 'Select Category'}) %>
    <%= f.input :created_at %>
    <%= f.input :updated_at %>
    <%= f.input :available_size %>
    <%= f.input :available_color %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
