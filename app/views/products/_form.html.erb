<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :unit_price %>
    <%= f.input :quantity %>
    <%= f.input :manufacturer_id %>
    <%= f.input :category_id %>
    <%= f.input :created_at %>
    <%= f.input :updated_at %>
    <%= f.input :views %>
    <%= f.input :available_size %>
    <%= f.input :available_color %>
    <%= f.input :quantity_sold %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
